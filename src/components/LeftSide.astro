---
import LeftSideCircles from "./LeftSideCircles.astro";
---

<div class="flex flex-col gap-2 w-1/3 px-2 h-[90%] bg-slate-100">

    <div class="my-2">
        <p class="border-b-2 font-bold text-[var(--main-color)]">Personal Info</p>
        <div class="mt-2 flex flex-col gap-3">
            <div class="flex flex-col text-sm gap-1">
                <p class="font-semibold">Phone</p>
                <p class="text-[0.8rem]">123654789</p>
            </div>
            <div class="flex flex-col text-sm gap-1">
                <p class="font-semibold">Email</p>
                <p class="text-[0.8rem]">an***.be***.**7@gmail.com</p>
            </div>
            <div class="flex flex-col text-sm gap-1">
                <p class="font-semibold">GitHub</p>
                <p class="text-[0.8rem]">MrDote</p>
            </div>
        </div>
    </div>

    <div class="my-2">
        <p class="border-b-2 font-bold text-[var(--main-color)]">Skills</p>
        <div class="mt-2 flex flex-col gap-3">
            <LeftSideCircles skill='Teamwork' circles={3}/>
            <LeftSideCircles skill='Python' circles={4}/>
            <LeftSideCircles skill='TypeScript' circles={2}/>
            <LeftSideCircles skill='SomeLongQuality' circles={5}/>
        </div>
    </div>

    <div class="my-2">
        <p class="border-b-2 font-bold text-[var(--main-color)]">Languages</p>
        <div class="mt-2 flex flex-col gap-3">
            <LeftSideCircles skill='English' circles={5}/>
            <LeftSideCircles skill='Spanish' circles={3}/>
            <LeftSideCircles skill='Russian' circles={5}/>
        </div>
    </div>

</div>